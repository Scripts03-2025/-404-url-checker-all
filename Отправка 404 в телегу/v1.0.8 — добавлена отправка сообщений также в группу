const TG_TOKEN_404 = '8136586676:AAHvXeM4ih9ECPdSwzGM5P0O1p2_GYb_iTk';
const TG_CHAT_ID_404 = '8003377702';
const TG_GROUP_ID_404 = '-1002596639009';

function checkFor404AndNotify() {
  const sheet = SpreadsheetApp.getActive().getSheetByName('404 (–Ω–µ –º–µ–Ω—è—Ç—å!)');
  const data = sheet.getDataRange().getValues();

  for (let i = 1; i < data.length; i++) {
    const status = data[i][3]; // –°—Ç–æ–ª–±–µ—Ü D

    if (status === 404) {
      const textId = escapeHtml(data[i][0]);   // –°—Ç–æ–ª–±–µ—Ü A
      const badLink = escapeHtml(data[i][1]);  // –°—Ç–æ–ª–±–µ—Ü B
      const author = escapeHtml(data[i][5]);   // –°—Ç–æ–ª–±–µ—Ü F

      const message = `
üö® <b>–ë–∞–Ω 404</b>

üÜî ID —Ç–µ–∫—Å—Ç–∞: ${textId}  
üë§ –†–∞–∑–º–µ—Å—Ç–∏–ª: ${author}

üîó ${badLink}
      `.trim();

      sendTelegramMessage404(message, TG_CHAT_ID_404);  // –õ–∏—á–Ω–æ–µ —Å–æ–æ–±—â–µ–Ω–∏–µ
      sendTelegramMessage404(message, TG_GROUP_ID_404); // –í –≥—Ä—É–ø–ø—É
    }
  }
}

function sendTelegramMessage404(message, chatId) {
  const url = `https://api.telegram.org/bot${TG_TOKEN_404}/sendMessage`;
  const payload = {
    chat_id: chatId,
    text: message,
    parse_mode: 'HTML'
  };

  const options = {
    method: 'post',
    contentType: 'application/json',
    payload: JSON.stringify(payload)
  };

  UrlFetchApp.fetch(url, options);
}

// üîê –≠–∫—Ä–∞–Ω–∏—Ä—É–µ—Ç —Å–ø–µ—Ü–∏–∞–ª—å–Ω—ã–µ —Å–∏–º–≤–æ–ª—ã –¥–ª—è HTML (–∏–Ω–∞—á–µ Telegram –º–æ–∂–µ—Ç –≤—ã–¥–∞—Ç—å –æ—à–∏–±–∫—É 400)
function escapeHtml(text) {
  if (!text) return '';
  return text.toString()
    .replace(/&/g, "&amp;")
    .replace(/</g, "&lt;")
    .replace(/>/g, "&gt;");
}

